                                                    <thead>
                                                        
                                                        <tr>
                                                            <th class="center">
                                                                <label class="pos-rel">
                                                                    <input type="checkbox" class="ace" :checked="allCheck" @click="selectAll"/>
                                                                    <span class="lbl"></span>
                                                                </label>
                                                            </th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">评论ID</th>
                                                            <th class="center col-sm-2 col-md-2 col-lg-2">评论内容</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">创建时间</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">用户昵称</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">用户编号</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">用户客户号</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">点赞数</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">回复数</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">置顶状态</th>
                                                            <th class="center col-sm-1 col-md-1 col-lg-1">状态</th>
                                                            <th class="center col-sm-2 col-md-2 col-lg-2">操作</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <template V-if='tableData3.length>0'>
                                                            <tr v-for="(item,index) in tableData3" :key="index">

                                                                <td class="center">
                                                                    <label class="pos-rel">
                                                                        <input type="checkbox" class="ace" :checked="item.check" @click="select(index)"/>
                                                                        <span class="lbl"></span>
                                                                    </label>
                                                                </td>
                                                                <td class="center" v-text='item.id'></td>
                                                                <td class="center" v-text='item.content'></td>
                                                                <td class="center" v-text='item.createTime'></td>
                                                                <td class="center" v-text='item.nickname'></td>
                                                                <td class="center" v-text='item.userId'></td>
                                                                <td class="center" v-text='item.userInfo.custNo'></td>
                                                                <td class="center" v-text='item.thumbCount'></td>
                                                                <td class="center">
