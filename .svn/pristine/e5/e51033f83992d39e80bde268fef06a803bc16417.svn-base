<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../common/head.html %>
    <!-- inline styles related to this page -->
    <link rel="stylesheet" href="/ace/assets/css/bootstrap-datetimepicker.min.css"/>

    <style>
        .table>tbody>tr>td {
            vertical-align: middle;
        }

        .form-inline>div {
            padding: 10px 0;
            text-align: right;

        }

        .form-inline span {
            text-align: left;
        }

        @media (min-width: 768px) {
            .modal-dialog {
                width: 1000px;
                margin: 30px auto;
            }
        }

        #wangEditor .w-e-text p {
            white-space: break-spaces;
        }
    </style>
</head>

<body class="no-skin">
    <% include ../../common/header.html %>
    <div class="main-container ace-save-state" id="main-container">
        <% include ../../common/sidebar.html %>
        <% include ../../common/left-menu.html %>
        <div class="main-content">
            <div class="main-content-inner">
                <div class="page-content">
                    <% include ../../common/breadcrumb.html %>
                    <% include ../../common/ace-settings-container.html %>
                    <div class="row" id="content">

                        <!-- 置顶弹窗 -->
                        <div class="col-xs-12">
                            <div class="modal" id="updateLevelDialog" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog" style="width:450px;">
                                    <div class="modal-content">
                                        <div class="modal-header" style="padding: 10px;">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×
                                            </button>
                                            <h4 class="modal-title">设置置顶时间</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <div class="input-group" style='margin: 21px auto;'>
                                                <label class="control-label ">开始时间:&nbsp;&nbsp;</label>
                                                <input type="text" class="date-timepicker  " value=""  id="startTime"/>
                                                <span class="input-group-addon " style="width: 34px; height: 34px; "><i
                                                        class="fa fa-clock-o bigger-110"></i></span>
                                            </div>
                                            <div class="input-group" style='margin: 21px auto;'>
                                                <label class="control-label ">结束时间:&nbsp;&nbsp;</label>
                                                <input type="text" class="date-timepicker  " value="" id="endTime"/>
                                                <span class="input-group-addon "
                                                      style="width: 34px; height: 34px; position: relative;left:-1px;"><i
                                                        class="fa fa-clock-o bigger-110"></i></span>
                                            </div>
                                        </div>
                                        <p class="text-center">
                                            <button type="button" class="btn btn-primary btn-sm" @click='levelModify()'>确定
                                            
                                            </button>
                                            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">取消
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--提示信息弹窗-->
                            <div class="modal" id="info" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog" style="width:600px;">
                                    <div class="modal-content">
                                        <div class="modal-header" style="padding: 10px;">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×
                                            </button>
                                            <h4 class="modal-title">提示信息</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <h4 v-text="diaMsg"></h4>
                                        </div>
                                        <p class="text-center">
                                            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">确定
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--删除操作的提示信息-->
                            <div class="modal" id="del" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog" style="width:600px;">
                                    <div class="modal-content">
                                        <div class="modal-header" style="padding: 10px;">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×
                                            </button>
                                            <h4 class="modal-title">删除提示信息</h4>
                                        </div>
                                        <div class="modal-body text-center">
                                            <h4 v-text="diaMsg"></h4>
                                        </div>
                                        <p class="text-center">
                                            <button class="btn btn-info btn-sm" type="button" @click='del'>
                                                确定
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
                                                取消
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- 关联作者弹窗：点击未关联的邮箱地址下面的”关联“按钮 -->
                            <div class="modal" id="selectAuthor" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog" style="width:600px;">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×
                                            </button>
                                            <h4 class="modal-title">账号关联
                                            </h4>
                                        </div>
                                        <div class="form-horizontal" style="padding-top: 20px;">
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">
                                                    邮箱地址:</label>
                                                <div class="col-sm-4 ">
                                                    <input type="text" v-model="relatedData.sender" readonly=“readonly”
                                                        style="width: 100%;">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">
                                                    关联账号:</label>
                                                <div class="col-sm-4">
                                                    <select v-model='relatedData.authorId'>
                                                        <option value="">请选择</option>
                                                        <option :value="item.id" v-for='item in accountList'>
                                                            {{item.nickname}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="text-center">
                                            <button class="btn btn-info btn-sm" type="button" @click='relatedMail'
                                                v-show='!relatedData.relatedStatus'>
                                                确定
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
                                                取消
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!-- 文章管理、邮件内容 新增、修改弹窗 -->
                            <div class="modal" id="add" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header" style="padding: 10px;">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×
                                            </button>
                                            <h4 class="modal-title">{{modifyStatus==1?'修改':'新增'}}</h4>
                                        </div>
                                        <div class="form-horizontal" style="padding-top: 20px;">
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    作者:</label>
                                                <div class="col-sm-4">
                                                    <select v-model='operateData.authorId' style="width: 168px;">
                                                        <option value="">请选择</option>
                                                        <option :value="item.id" v-for='item in accountList'>
                                                            {{item.nickname}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    文章标题:</label>
                                                <div class="col-sm-8">
                                                    <input type="text" style="width: 80%;" v-model='operateData.title'>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    分享副标题:</label>
                                                <div class="col-sm-8">
                                                    <input type="text" style="width: 80%;" v-model='operateData.shareSummary'>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    摘要:</label>
                                                <div class="col-sm-8">
                                                    <input type="text" style="width: 100%;"
                                                        v-model='operateData.summary'>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    文章正文:</label>
                                                <div class="col-sm-9" id="wangEditor">
                                                </div>
                                            </div>
                                            <div class="form-group" id='thumbNail' v-if="isArticle">
                                                <label class="col-sm-2 control-label">
                                                    缩略图:
                                                </label>
                                                <div class="upload-pic" style="padding-left: 12px;">
                                                    <div style='margin:5px 5px 5px 0; width:100%'>
                                                        <input type="text"
                                                            style="width:500px;margin-bottom:5px;margin-left: 12px ;"
                                                            id='uploadPicInput' placeholder="请选择图片" disabled
                                                            v-model.trim='picturePath' /><br>
                                                        <button class="btn btn-info btn-sm" type="button"
                                                            id="selectPicBtn" style="margin-left: 170px;"
                                                            @click='selectPic'>
                                                            添加图片
                                                        </button>
                                                        <button class="btn btn-info btn-sm" type="button"
                                                            @click="picUpload">
                                                            上传
                                                        </button>
                                                        <span>（最多插入9张图片）</span>
                                                        <input id="uploadPictureInput" type="file" name="file"
                                                            ref="pictureInput" @change='showPicName'
                                                            style="display: none" class="upload" />
                                                        <button class="btn btn-info btn-sm" type="button"
                                                            @click="getArticleImg()" style="margin-left: 150px;">
                                                            生成缩略图
                                                        </button>
                                                    </div>

                                                </div>
                                                <div class="group-coms-pic" v-if="imagesUrl.length>0" v-cloak
                                                    style="margin-left:18rem;margin-right: 0.3rem;">
                                                    <div class="item" v-for="(v,i) in imagesUrl" :key="i"
                                                        style="float:left;">
                                                        <div class="pic-box"
                                                            style="overflow: hidden;  position: relative;">
                                                            <img class="img" :src="v"
                                                                style="width:100px;height: 100px; margin:1rem">
                                                            <div class="del" @click="delImg(i)"
                                                                style="width:20px; height: 20px; text-align: center; border-radius: 50%; color:black;
                                                                background-color: rgb(192,192,192); cursor: pointer; font-style: normal; position: absolute; right: 0px; top: 0px; ">
                                                                x</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    附件链接:
                                                </label>
                                                <div style="float: left; padding-left: 12px;">
                                                    <div style='margin:5px 5px 5px 0; width:100%'
                                                        v-for="item in operateData.attachLinkList">
                                                        <button @click='selectButton(item,operateData.attachLinkList)'
                                                            class="btn btn-sm btn-info">
                                                            <i class="ace-icon fa fa-check"
                                                                v-if='item.status'></i>{{item.attachName}}
                                                        </button>
                                                        <a :href='item.url' target="_blank">查看附件</a>
                                                    </div>
                                                    <input type="text" style="width:500px;margin-bottom:5px;"
                                                        id='uploadInput' placeholder="请选择附件" disabled
                                                        v-model.trim='filePath' v-if="isArticle" /><br>
                                                    <div style='margin:5px 5px 5px 0; width:100%' id='fileType'
                                                        v-if="isArticle">
                                                        <button class="btn btn-info btn-sm" type="button" id="chooseBtn"
                                                            @click='selectFile'>
                                                            添加附件
                                                        </button>
                                                        <button class="btn btn-info btn-sm" type="button"
                                                            @click="fileUpload">
                                                            上传
                                                        </button>

                                                        <input id="uploadFileInput" type="file" ref="fileInput"
                                                            @change='showFileName' style="display: none" />
                                                    </div>
                                                </div>


                                            </div>




                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    关联话题:</label>
                                                <div class="col-sm-4">
                                                    <select v-model='operateData.topicId' style="width: 168px;">
                                                        <option value="">请选择</option>
                                                        <option :value="item.id" v-for='item in topicLIst'>
                                                            {{item.name}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    关联产品:</label>
                                                <div class="col-sm-9">
                                                    <input type="text" v-model='operateData.productIds'
                                                        placeholder="输入基金,组合,实盘代码，用逗号隔开" style="width: 100%;">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    关联音视频:</label>
                                                <div class="col-sm-8">
                                                    <button class="btn btn-info btn-sm" type="button"
                                                        @click='operateData.mediaList.push({cmsId:"",attachType:"3",valid:0,status:1})'>
                                                        添加音视频附件
                                                    </button>
                                                    <div>
                                                        <div v-for='(item,index) in operateData.mediaList'
                                                            v-if='item.valid!=1'>
                                                            <input v-model='item.cmsId' type="text"
                                                                placeholder="填写cms里的ID">
                                                            <select v-model='item.attachType'>
                                                                <option value="3">视频</option>
                                                                <option value="4">音频</option>
                                                            </select>
                                                            <span @click='attachmentsSplice(index)'>
                                                                <i class="ace-icon glyphicon glyphicon-remove"></i>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- 需求9153 插入链接 -->
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    插入链接:
                                                </label>
                                                <div class="col-sm-8">
                                                    <button class="btn btn-info btn-sm" style="margin-bottom:5px;"
                                                        type="button" @click="addURL">
                                                        添加链接
                                                    </button>

                                                    <div>
                                                        <div v-for="(item,index) in operateData.urlLinkList"
                                                            :key="index">
                                                            <input type="text" style="width:150px;margin-bottom:5px;"
                                                                id='uploadInput' placeholder="请输入链接名称"
                                                                v-model='item.attachName' />
                                                            <input type="text" style="width:300px;margin-bottom:5px;"
                                                                id='uploadInput' placeholder="请输入链接地址"
                                                                v-model='item.url' />
                                                            <span @click="delURL(item)">
                                                                <i class="ace-icon glyphicon glyphicon-remove"></i>
                                                            </span>
                                                            <br>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    关联投票:</label>
                                                <div class="col-sm-8">
                                                    <select v-model='operateData.voteId'>
                                                        <option value="">空</option>
                                                        <option :value="item.surveyId" v-for='item in voteIdList'>
                                                            {{item.surveyId}}--{{item.surveyTitle}}</option>
                                                    </select>
                                                </div>
                                            </div>
																						<div class="form-group">
																							<label class="col-sm-2 control-label">
																									初始点赞数:</label>
																							<div class="col-sm-9">
																									<input type="number" v-model.trim='operateData.initThumbCount'
																											placeholder="请输入正整数" style="width: 168px;">
																							</div>
																						</div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    是否上架:</label>
                                                <div class="col-sm-8">
                                                    <select v-model='operateData.status' style="width: 168px;">
                                                        <option value="1">上架</option>
                                                        <option value="8">下架</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-2 control-label">
                                                    是否支持分享:</label>
                                                <div class="col-sm-8">
                                                    <select v-model='operateData.isShare' style="width: 168px;">
                                                        <option value="1">是</option>
                                                        <option value="0">否</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="text-center">
                                            <button class="btn btn-info btn-sm" type="button" @click='add'
                                                v-show='modifyStatus==0'>
                                                确定
                                            </button>
                                            <button class="btn btn-info btn-sm" type="button" @click='modify'
                                                style='margin-right: 50px;' v-show='modifyStatus==1'>
                                                修改
                                            </button>
                                            <button class="btn btn-info btn-sm" type="button" @click='add'
                                                style='margin-right: 50px;' v-show='modifyStatus==2'>
                                                发布
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">
                                                取消
                                            </button>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <!--20210901新增查看评论 start-->
                            <!--查看评论列表-->
                            <div class="modal" id="checkComment" tabindex="-1" role="dialog" aria-hidden="true"
                                data-backdrop="static">
                                <div class="modal-dialog" style="width:85%;margin-left: 10%;">
                                    <div class="modal-content">
                                        <div class="modal-header" style="padding: 10px;">
                                            <button type="button" class="close" data-dismiss="modal"
                                                aria-hidden="true">×</button>
                                            <h4 class="modal-title">文章评论列表</h4>
                                        </div>

                                        <div class="modal-body text-center">

                                            <div class="form-inline" style="  padding: 10px 0;">
                                                <!-- <div class="form-group pull-left" style="padding-bottom: 30px;">
                                                    <label class="control-label">标题:</label>
                                                    <span v-text='commentTitle'>{{}}</span>
                                                </div> -->

                                                <div class="form-group pull-left" style="margin-left: 0;">
                                                    <label class="control-label">
                                                        用户编号:</label>
                                                    <input class="scrollable" v-model.trim='userId' style="width:150px"
                                                        type="text" />
                                                </div>
                                                <div class="form-group  pull-left" style="margin-left: 2%;">
                                                    <label class="control-label">
                                                        置顶状态:</label>
                                                    <select class="input-sm" @change="searchTableData3()" name="page3"
                                                        v-model="level">
                                                        <option value="1">已置顶</option>
                                                        <option value="0">未置顶</option>
                                                        <option value="">全部</option>

                                                    </select>
                                                </div>
                                                <div class="form-group  pull-left" style="margin-left: 2%;">
                                                    <input type="button" class="btn btn-sm btn-primary" value="查询"
                                                        @click="searchTableData3()">
                                                </div>

                                                <div class="form-group pull-right" style="margin-bottom: 0px">
                                                    <input type="button" @click='batchUpStatus(`1`)'
                                                        class="btn btn-sm btn-primary" value="批量展示">
                                                </div>
                                                <div class="form-group pull-right" style="margin-bottom: 0px">
                                                    <input type="button" @click='batchUpStatus(`5`)'
                                                        class="btn btn-sm btn-primary" value="批量隐藏">
                                                </div>
                                                <div class="form-group pull-right" style="margin-bottom: 0px">
                                                    <input type="button" @click='exportRemarksExcel'
                                                        class="btn btn-sm btn-primary" value="导出评论">
                                                </div>
                                            </div>
                                            <div style="margin-bottom: 3%;"></div>
                                            <!--数据表-->
                                            <template>
                                                <!-- 增加表头样式和分页 star-->
                                                <div class="table-header" style="">
                                                    <%= cpage %>--评论列表数据
                                                </div>
                                                <!--分页器和快速查询-->
                                                <div class="row"
                                                    style="padding:8px 0;background-color: #EFF3F8; margin: 0;">
                                                    <div class="col-xs-2">
                                                        <div class="dataTables_length" id="dynamic-table_length">
                                                            <label>每页显示</label>
                                                            <select class="input-sm" name="page3.pageMaxNum"
                                                                @change="searchTableData3()"
                                                                v-model.trim="page3.pageMaxNum">
                                                                <option value="10">10</option>
                                                                <option value="100">100</option>
                                                                <option value="500">500</option>
                                                                <option value="9999">9999</option>
                                                            </select>
                                                            <label>条</label>
                                                        </div>
                                                    </div>
                                                </div>
